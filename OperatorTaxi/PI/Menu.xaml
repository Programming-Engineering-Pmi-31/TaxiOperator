<Window x:Class="PI.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PI"
        mc:Ignorable="d"
        Title="Menu" Height="500" Width="900"
        WindowStyle="None" ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="MenuTextBlock">
            <Setter Property="Control.FontFamily" Value="Arial"/>
            <Setter Property="Control.FontWeight" Value="Light"/>
            <Setter Property="Control.FontSize" Value="26"/>
            <Setter Property="Control.HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Control.Foreground" Value="Black"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
            <Setter Property="Control.Padding" Value="3"/>
            <Setter Property="Control.Width" Value="140"/>
            <Setter Property="Control.Height" Value="40"/>
            <Setter Property="Control.Margin" Value="0,8,0,0"/>
        </Style>
        <Style x:Key="TitleTextBlock">
            <Setter Property="Control.FontWeight" Value="Bold"/>
            <Setter Property="Control.FontFamily" Value="Fonts#Calibri"/>
            <Setter Property="Control.FontSize" Value="33"/>
            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
            <Setter Property="Control.Foreground" Value="Black"/>
            <Setter Property="Control.Margin" Value="10,0,702,450"/>
            <Setter Property="Control.Width" Value="188"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="123*"/>
        </Grid.RowDefinitions>

        <DockPanel HorizontalAlignment="Left" LastChildFill="False" Margin="0" Width="198" Grid.RowSpan="2">
            <DockPanel.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Orange"/>
                </LinearGradientBrush>
            </DockPanel.Background>
            <Image Source="Photos/Taxiimage.png" Margin="0,52,0,356" Width="203" />
        </DockPanel>

        <TextBlock Text="Taxi operator" Grid.Row="1" Style="{StaticResource TitleTextBlock}" />
        <Button x:Name="FindButton" Click="FindButton_Click" HorizontalAlignment="Stretch" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Margin="0,150,702,0" Grid.Row="1" VerticalAlignment="Top" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Photos/find.png" Width="40" Height="40"/>
                <TextBlock Text="Find" Style="{StaticResource MenuTextBlock}"/>
            </StackPanel>
        </Button>

        <Button x:Name="CabinetButton" Click="CabinetButton_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" HorizontalAlignment="Left" VerticalAlignment="Top" Width="198" Margin="0,230,0,0" Grid.Row="1" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Photos/profile.png" Width="40" Height="40"/>
                <TextBlock Text="Cabinet" Style="{StaticResource MenuTextBlock}"/>
            </StackPanel>
        </Button>
        <Button x:Name="ExitButton" Click="ExitButton_Click" HorizontalAlignment="Left" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" VerticalAlignment="Top" Width="198" Margin="0,300,0,0" Grid.Row="1" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Photos/exit.png" Width="40" Height="40"/>
                <TextBlock Text="Exit" Style="{StaticResource MenuTextBlock}"/>
            </StackPanel>
        </Button>
        <Grid Margin="203,2,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="143*"/>
                <RowDefinition Height="107*"/>
            </Grid.RowDefinitions>
            <Frame Name="Main" Margin="0,0,0,-492" Grid.RowSpan="2" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </Grid>
</Window>
